  		<input type='submit' value='Guess!' />
      <input type="hidden" name="cheat" value='false' />
    </div>
		</form>
		<h3>
		You have <%= remaining %> guesses left.
	</h3>
   <h1>
      <%= end_message %>
    </h1>
    <h3> <%= cheat_mode %> </h3>
	</div>
	</body>
	</html>