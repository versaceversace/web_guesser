<html>
	<head>
		<style>
      body {
        background-color: <%= background %>;
      }
      .container {
      	margin-top: 200px;
      	text-align: center;
      }
      h1 {
      	font-family: Garamound, sans-serif;
      	font-size: 45px;
      }
      h3 {
        font-family: Garamound, sans-serif;
        color: #484848;
      }
      form input[type=text] {
      	width: 118px;
				font-size: 32px;
				line-height: 32px;
        text-align: center;
      }
      form input[type=submit] {
      	height: 40px;
      	font-size: 30px;
      	text-align: auto;
      	margin-left: 12px;
      }
      .form-stuff {
      	position: static;
      }
